<Window x:Class="GurpsSpace.SelectInstallation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GurpsSpace"
        mc:Ignorable="d"
        Title="SelectInstallation" Width="500" SizeToContent="Height">

    <StackPanel Orientation="Vertical">


        <Label>Select installation parameters below.</Label>

        <GroupBox Header="Installation Type">
            <StackPanel Orientation="Vertical" Name="typeChoice">
                <Label Name="lblInstallType" Content="{Binding Path=TypeQuestion, Mode=OneWay}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Population Rating">
            <StackPanel Orientation="Vertical" Name="populationSlider">
                <Label>Select the size of the installation.  This is generally 1-4.</Label>
                <Slider Minimum="1" Maximum="4" Value="2"/>
            </StackPanel>
        </GroupBox>
            
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Click="btnOK_Click">OK</Button>
            <Button IsCancel="True">Cancel</Button>
        </StackPanel>
        
    </StackPanel>
</Window>
